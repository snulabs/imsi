    .border-blue { border-top: 5px solid #3498db; }
    .border-red { border-top: 5px solid #e74c3c; }
    .border-green { border-top: 5px solid #2ecc71; }

    .icon-circle { 
        width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; 
        justify-content: center; margin: 0 auto; color: white; font-size: 1.5rem;
    }
    .bg-blue { background: #3498db; }
    .bg-red { background: #e74c3c; }
    .bg-green { background: #2ecc71; }

    .tag-group { display: flex; flex-wrap: wrap; gap: 0.5rem; justify-content: center; }
    .tag { padding: 0.3rem 0.8rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600; }
    .tag-blue { background: #ebf5fb; color: #3498db; }
    .tag-pink { background: #fdf2f2; color: #e74c3c; }
    .tag-green { background: #eafaf1; color: #2ecc71; }

    .team-info { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; text-align: left; font-size: 0.8rem; }
    .team-item strong { display: block; font-size: 0.85rem; margin-bottom: 2px; }
