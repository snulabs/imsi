@page "/"
@using MyPortfolio.Components

<PageTitle>IMSI Lab</PageTitle>

@if (currentPage == "home")
{
    <!-- 홈 화면일 때만 헤더 표시 -->
    <div style="padding: 7rem 2rem 3rem; text-align: center; font-family: 'Montserrat', sans-serif;">
        <h1 style="font-size: 5.5rem; font-weight: 300; margin-bottom: 0.8rem; font-family: 'Cormorant Garamond', serif; letter-spacing: -1px;">
            IMSI Lab
        </h1>
        
        <p style="font-size: 1.1rem; font-weight: 300; color: #666; margin-bottom: 5rem; letter-spacing: 2px; text-transform: uppercase;">
            Imaging-driven Medical SuperIntelligence Group
        </p>

        <div style="display: flex; gap: 1.5rem; justify-content: center; flex-wrap: wrap; margin-bottom: 5rem; position: relative; z-index: 100;">
            <div class="dropdown-container">
                <button class="nav-btn-main" 
                        type="button"
                        @onclick="TogglePeopleDropdown">
                    People
                </button>
                @if (showPeopleDropdown)
                {
                    <div class="dropdown-menu">
                        <button @onclick='() => ShowPage("people-professors")' class="dropdown-item">Professors</button>
                        <button @onclick='() => ShowPage("people-researchers")' class="dropdown-item">Researchers</button>
                        <button @onclick='() => ShowPage("people-students")' class="dropdown-item">Students</button>
                        <button @onclick='() => ShowPage("people-advisors")' class="dropdown-item">Advisors</button>
                        <button @onclick='() => ShowPage("people-alumni")' class="dropdown-item">Alumni</button>
                    </div>
                }
            </div>
            
            <button @onclick='() => ShowPage("teams")' class="nav-btn-main">Teams</button>
            <button @onclick='() => ShowPage("projects")' class="nav-btn-main">Projects</button>
            <button @onclick='() => ShowPage("publications")' class="nav-btn-main">Publications</button>
            <button @onclick='() => ShowPage("contact")' class="nav-btn-main">Contact</button>
            <button @onclick='() => ShowPage("join")' class="nav-btn-main">Join</button>
        </div>
    </div>

    <!-- At a Glance 섹션 -->
    <div class="glance-section">
        <div class="glance-container">
            <h2 class="glance-title">IMSI Lab at a Glance</h2>
            <p class="glance-subtitle">Pioneering the future of healthcare through cutting-edge medical artificial intelligence research</p>

            <div class="glance-grid">
                <div class="glance-card border-blue">
                    <div class="icon-circle bg-blue"><i class="oi oi-beaker"></i></div>
                    <h3>Our Research</h3>
                    <p>Advanced AI algorithms for medical imaging, vision-language models, and federated learning systems</p>
                    <div class="tag-group">
                        <span class="tag tag-blue">3D Medical VLM</span>
                        <span class="tag tag-pink">CEUS Analysis</span>
                        <span class="tag tag-green">Neural Invasion Detection</span>
                    </div>
                </div>

                <div class="glance-card border-red">
                    <div class="icon-circle bg-red"><i class="oi oi-people"></i></div>
                    <h3>Our Team</h3>
                    <p>Multidisciplinary researchers across 4 specialized teams working on breakthrough medical AI projects</p>
                    <div class="team-info">
                        <div class="team-item"><strong class="text-orange">Team SUDAL</strong> <span>3D Gen-AI</span></div>
                        <div class="team-item"><strong class="text-blue">Team PNI</strong> <span>Neural Detection</span></div>
                        <div class="team-item"><strong class="text-red">Team CEUS</strong> <span>Ultrasound Analysis</span></div>
                        <div class="team-item"><strong class="text-green">Team MultiModal</strong> <span>Vision-Language</span></div>
                        <div class="team-item"><strong class="text-purple">Team HAEDAL</strong> <span>3D Medical AI study</span></div>
                    </div>
                </div>

                <div class="glance-card border-green">
                    <div class="icon-circle bg-green"><i class="oi oi-trophy"></i></div>
                    <h3>Latest News</h3>
                    <p>NVIDIA HK collaboration grants awarded to all three research teams for innovative medical AI projects</p>
                    <div class="news-highlight">
                        <strong>3 Major Grants • MICCAI 2025 Submissions • Clinical Partnerships</strong>
                    </div>
                </div>
            </div>

            <div class="cta-banner">
                <h2>Ready to Collaborate?</h2>
                <p>Join us in revolutionizing healthcare through AI. Explore our research, meet our team, and discover collaboration opportunities.</p>
                <div class="cta-buttons">
                    <button @onclick='() => ShowPage("publications")' class="cta-btn">View Publications</button>
                    <button @onclick='() => ShowPage("projects")' class="cta-btn">Current Projects</button>
                    <button @onclick='() => ShowPage("contact")' class="cta-btn">Contact Us</button>
                    <button @onclick='() => ShowPage("join")' class="cta-btn btn-highlight">Join Our Team</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- 다른 페이지일 때는 간단한 헤더 + 뒤로가기 버튼 -->
    <div style="padding: 2rem; border-bottom: 1px solid #eee; display: flex; align-items: center; gap: 1rem;">
        <button @onclick='() => ShowPage("home")' 
                style="padding: 0.5rem 1rem; border: 1px solid #222; background: white; cursor: pointer; font-size: 1rem;">
            ←
        </button>
        <h2 style="margin: 0; font-family: 'Cormorant Garamond', serif; font-size: 2rem; font-weight: 300;">
            IMSI Lab
        </h2>
    </div>

    <!-- 페이지 컨텐츠 -->
    @if (currentPage.StartsWith("people-"))
    {
        <PeopleComponent Category="@currentPage.Replace("people-", "")" OnPersonSelected="ShowPersonDetail" />
    }
    else if (currentPage == "teams")
    {
        <TeamMembersComponent OnPersonSelected="ShowPersonDetail" />
    }
    else if (currentPage == "projects")
    {
        <ProjectsComponent />
    }
    else if (currentPage == "publications")
    {
        <PublicationsComponent />
    }
    else if (currentPage == "contact")
    {
        <div style="padding: 5rem; text-align: center;">
            <h2>Contact Page</h2>
            <p>Coming soon...</p>
        </div>
    }
    else if (currentPage == "join")
    {
        <div style="padding: 5rem; text-align: center;">
            <h2>Join Our Team</h2>
            <p>Coming soon...</p>
        </div>
    }
}

@if (!string.IsNullOrEmpty(selectedPersonId))
{
    <div class="modal-overlay" @onclick="ClosePersonDetail">
        <div class="modal-content" @onclick:stopPropagation="true">
            <button class="modal-close" @onclick="ClosePersonDetail">✕</button>
            <PersonDetailComponent PersonId="@selectedPersonId" OnClose="ClosePersonDetail" />
        </div>
    </div>
}

@code {
    private bool showPeopleDropdown = false;
    private string currentPage = "home";
    private string? selectedPersonId = null;

    private void TogglePeopleDropdown()
    {
        showPeopleDropdown = !showPeopleDropdown;
    }

    private void ShowPage(string page)
    {
        currentPage = page;
        showPeopleDropdown = false;
        StateHasChanged();
    }

    private void ShowPersonDetail(string personId)
    {
        selectedPersonId = personId;
        StateHasChanged();
    }

    private void ClosePersonDetail()
    {
        selectedPersonId = null;
        StateHasChanged();
    }
}

<style>
    /* 기존 스타일 동일 */
    .dropdown-container {
        position: relative;
        display: inline-block;
    }

    .nav-btn-main {
        display: inline-block;
        min-width: 180px;
        padding: 1.2rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 300;
        border: 1px solid #222; 
        text-decoration: none;
        color: #222;
        background-color: #fff;
        outline: none;
        transition: background-color 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        font-family: 'Montserrat', sans-serif;
    }

    .nav-btn-main:hover {
        background-color: #f0f0f0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .dropdown-menu {
        position: absolute;
        top: 100%;
        left: 0;
        margin-top: 0.5rem;
        min-width: 200px;
        background: #ffffff !important;
        border: 2px solid #222 !important;
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
        border-radius: 0;
        overflow: visible;
        z-index: 10000 !important;
        display: block !important;
    }

    .dropdown-item {
        display: block !important;
        width: 100%;
        padding: 1rem 1.5rem;
        color: #222 !important;
        text-decoration: none;
        font-size: 1rem;
        transition: background-color 0.2s ease;
        border-bottom: 1px solid #eee;
        border: none;
        background: white;
        text-align: left;
        font-family: 'Montserrat', sans-serif;
        cursor: pointer;
    }

    .dropdown-item:last-child {
        border-bottom: none;
    }

    .dropdown-item:hover {
        background-color: #f0f0f0 !important;
        color: #000 !important;
    }

    .glance-section { 
        background-color: #f8f9fb; 
        padding: 6rem 0; 
        font-family: 'Montserrat', sans-serif;
        position: relative;
        z-index: 1;
    }
    .glance-container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
    .glance-title { font-size: 2.5rem; font-weight: 700; color: #2c3e50; margin-bottom: 1rem; text-align: center; }
    .glance-subtitle { font-size: 1.1rem; color: #7f8c8d; text-align: center; margin-bottom: 4rem; }

    .glance-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 5rem; }
    .glance-card { 
        background: #fff; border-radius: 20px; padding: 3rem 2rem; text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05); position: relative; transition: transform 0.3s ease;
    }
    .glance-card:hover { transform: translateY(-10px); }
    .glance-card h3 { font-size: 1.4rem; color: #34495e; margin: 1.5rem 0 1rem; font-weight: 600; }
    .glance-card p { font-size: 0.95rem; color: #7f8c8d; line-height: 1.6; margin-bottom: 2rem; }

    .border-blue { border-top: 5px solid #3498db; }
    .border-red { border-top: 5px solid #e74c3c; }
    .border-green { border-top: 5px solid #2ecc71; }

    .icon-circle { 
        width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; 
        justify-content: center; margin: 0 auto; color: white; font-size: 1.5rem;
    }
    .bg-blue { background: #3498db; }
    .bg-red { background: #e74c3c; }
    .bg-green { background: #2ecc71; }

    .tag-group { display: flex; flex-wrap: wrap; gap: 0.5rem; justify-content: center; }
    .tag { padding: 0.3rem 0.8rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600; }
    .tag-blue { background: #ebf5fb; color: #3498db; }
    .tag-pink { background: #fdf2f2; color: #e74c3c; }
    .tag-green { background: #eafaf1; color: #2ecc71; }

    .team-info { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; text-align: left; font-size: 0.8rem; }
    .team-item strong { display: block; font-size: 0.85rem; margin-bottom: 2px; }
    .text-orange { color: #f39c12; }
    .text-blue { color: #3498db; }
    .text-red { color: #e74c3c; }
    .text-green { color: #2ecc71; }
    .text-purple { color: #9b59b6; } 

    .news-highlight { background: #eafaf1; color: #27ae60; padding: 1rem; border-radius: 12px; font-size: 0.85rem; }

    .cta-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 30px; padding: 4rem 2rem; color: white; text-align: center;
    }
    .cta-banner h2 { font-size: 2.2rem; margin-bottom: 1.5rem; }
    .cta-banner p { font-size: 1.1rem; opacity: 0.9; max-width: 700px; margin: 0 auto 2.5rem; line-height: 1.7; }
    .cta-buttons { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
    .cta-btn { 
        padding: 0.8rem 2rem; border-radius: 30px; border: 1.5px solid rgba(255,255,255,0.4);
        color: white; text-decoration: none; transition: all 0.3s ease; background: rgba(255,255,255,0.1);
        font-weight: 500;
        cursor: pointer;
    }
    .cta-btn:hover { background: white; color: #764ba2; border-color: white; transform: translateY(-2px); }
    
    .cta-btn.btn-highlight {
        background: rgba(255,255,255,0.3);
        border: 2px solid white;
        font-weight: 600;
    }
    
    .cta-btn.btn-highlight:hover {
        background: white;
        color: #764ba2;
        box-shadow: 0 8px 24px rgba(255,255,255,0.3);
    }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        padding: 2rem;
    }

    .modal-content {
        background: white;
        border-radius: 20px;
        max-width: 1200px;
        width: 100%;
        max-height: 90vh;
        overflow-y: auto;
        position: relative;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: none;
        background: #f0f0f0;
        font-size: 1.5rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10001;
        transition: background 0.2s;
    }

    .modal-close:hover {
        background: #e0e0e0;
    }

    @@media screen and (max-width: 768px) {
        .dropdown-menu {
            left: 50%;
            transform: translateX(-50%);
            min-width: 180px;
        }
        
        .nav-btn-main {
            min-width: 140px;
            padding: 1rem 1.5rem;
            font-size: 1rem;
        }
        
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .cta-btn {
            width: 100%;
            max-width: 280px;
        }

        .modal-overlay {
            padding: 0;
        }
        
        .modal-content {
            max-height: 100vh;
            border-radius: 0;
        }
    }
</style>
