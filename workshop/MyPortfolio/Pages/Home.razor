    .news-highlight { background: #eafaf1; color: #27ae60; padding: 1rem; border-radius: 12px; font-size: 0.85rem; }

    .cta-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 30px; padding: 4rem 2rem; color: white; text-align: center;
    }
    .cta-banner h2 { font-size: 2.2rem; margin-bottom: 1.5rem; }
    .cta-banner p { font-size: 1.1rem; opacity: 0.9; max-width: 700px; margin: 0 auto 2.5rem; line-height: 1.7; }
    .cta-buttons { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
    .cta-btn { 
        padding: 0.8rem 2rem; border-radius: 30px; border: 1.5px solid rgba(255,255,255,0.4);
        color: white; text-decoration: none; transition: all 0.3s ease; background: rgba(255,255,255,0.1);
