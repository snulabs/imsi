@page "/"
@using MyPortfolio.Components
@implements IDisposable

<PageTitle>IMSI Lab</PageTitle>

<!-- 고정 네비게이션 바 (항상 표시) -->
<nav class="fixed-navbar">
    <div class="nav-container">
        <div class="nav-logo" @onclick='() => ShowPage("home")'>
            <h2>IMSI Lab</h2>
        </div>
        
        <div class="nav-links">
            <div class="dropdown-container">
                <button class="@(currentPage.StartsWith("people") ? "nav-link active" : "nav-link")" 
                        @onclick="TogglePeopleDropdown">
                    People
                </button>
                @if (showPeopleDropdown)
                {
                    <div class="dropdown-menu-fixed">
                        <button @onclick='() => ShowPage("people-professors")' class="dropdown-item-fixed">Professors</button>
                        <button @onclick='() => ShowPage("people-researchers")' class="dropdown-item-fixed">Researchers</button>
                        <button @onclick='() => ShowPage("people-students")' class="dropdown-item-fixed">Students</button>
                        <button @onclick='() => ShowPage("people-advisors")' class="dropdown-item-fixed">Advisors</button>
                        <button @onclick='() => ShowPage("people-alumni")' class="dropdown-item-fixed">Alumni</button>
                    </div>
                }
            </div>
            
            <button class="@(currentPage == "teams" ? "nav-link active" : "nav-link")" 
                    @onclick='() => ShowPage("teams")'>Teams</button>
            <button class="@(currentPage == "projects" ? "nav-link active" : "nav-link")" 
                    @onclick='() => ShowPage("projects")'>Projects</button>
            <button class="@(currentPage == "publications" ? "nav-link active" : "nav-link")" 
                    @onclick='() => ShowPage("publications")'>Publications</button>
            <button class="@(currentPage == "gallery" ? "nav-link active" : "nav-link")" 
                    @onclick='() => ShowPage("gallery")'>Gallery</button>
            <button class="@(currentPage == "contact" ? "nav-link active" : "nav-link")" 
                    @onclick='() => ShowPage("contact")'>Contact</button>
        </div>
    </div>
</nav>

<!-- 메인 컨텐츠 -->
<div class="main-content">
    @if (currentPage == "home")
    {
        <!-- 홈 화면 - 배경 이미지 슬라이더 -->
        <div class="hero-section-with-bg" style="background-image: url('@GetCurrentHeroImage()');">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <h1 class="hero-title">IMSI Lab</h1>
                <p class="hero-subtitle">Imaging-driven Medical SuperIntelligence Group</p>
            </div>
        </div>

        <!-- At a Glance 섹션 -->
        <div class="glance-section">
            <div class="glance-container">
                <h2 class="glance-title">IMSI Lab at a Glance</h2>
                <p class="glance-subtitle">Pioneering the future of healthcare through cutting-edge medical artificial intelligence research</p>

                <div class="glance-grid">
                    <div class="glance-card border-blue">
                        <div class="icon-circle bg-blue"><i class="oi oi-beaker"></i></div>
                        <h3>Our Research</h3>
                        <p>Advanced AI algorithms for medical imaging, vision-language models, and federated learning systems</p>
                        <div class="tag-group">
                            <span class="tag tag-blue">3D Medical VLM</span>
                            <span class="tag tag-pink">CEUS Analysis</span>
                            <span class="tag tag-green">Neural Invasion Detection</span>
                        </div>
                    </div>

                    <div class="glance-card border-red">
                        <div class="icon-circle bg-red"><i class="oi oi-people"></i></div>
                        <h3>Our Team</h3>
                        <p>Multidisciplinary researchers across 5 specialized teams working on breakthrough medical AI projects</p>
                        <div class="team-info">
                            <div class="team-item"><strong class="text-orange">SUDAL</strong> <span>3D Gen-AI</span></div>
                            <div class="team-item"><strong class="text-blue">PNI</strong> <span>Neural Detection</span></div>
                            <div class="team-item"><strong class="text-red">CEUS</strong> <span>Ultrasound Analysis</span></div>
                            <div class="team-item"><strong class="text-green">MultiModal</strong> <span>Vision-Language</span></div>
                            <div class="team-item"><strong class="text-purple">HAEDAL</strong> <span>3D Medical AI study</span></div>
                        </div>
                    </div>

                    <div class="glance-card border-green">
                        <div class="icon-circle bg-green"><i class="oi oi-trophy"></i></div>
                        <h3>Latest News</h3>
                        <p>NVIDIA HK collaboration grants awarded to all three research teams for innovative medical AI projects</p>
                        <div class="news-highlight">
                            <strong>3 Major Grants • MICCAI 2025 Submissions • Clinical Partnerships</strong>
                        </div>
                    </div>
                </div>

                <div class="cta-banner">
                    <h2>Ready to Collaborate?</h2>
                    <p>Join us in revolutionizing healthcare through AI. Explore our research, meet our team, and discover collaboration opportunities.</p>
                    <div class="cta-buttons">
                        <button @onclick='() => ShowPage("publications")' class="cta-btn">View Publications</button>
                        <button @onclick='() => ShowPage("projects")' class="cta-btn">Current Projects</button>
                        <button @onclick='() => ShowPage("contact")' class="cta-btn btn-highlight">Contact & Join</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- 다른 페이지 컨텐츠 - 패딩 추가 -->
        <div class="page-content">
            @if (currentPage.StartsWith("people-"))
            {
                <PeopleComponent Category="@currentPage.Replace("people-", "")" OnPersonSelected="ShowPersonDetail" />
            }
            else if (currentPage == "teams")
            {
                <TeamMembersComponent OnPersonSelected="ShowPersonDetail" />
            }
            else if (currentPage == "projects")
            {
                <ProjectsComponent />
            }
            else if (currentPage == "publications")
            {
                <PublicationsComponent />
            }
            else if (currentPage == "gallery")
            {
                <GalleryComponent @ref="galleryComponent" />
            }
            else if (currentPage == "contact")
            {
                <ContactComponent />
            }
        </div>
    }
</div>

@if (!string.IsNullOrEmpty(selectedPersonId))
{
    <div class="modal-overlay" @onclick="ClosePersonDetail">
        <div class="modal-content" @onclick:stopPropagation="true">
            <button class="modal-close" @onclick="ClosePersonDetail">✕</button>
            <PersonDetailComponent PersonId="@selectedPersonId" OnClose="ClosePersonDetail" />
        </div>
    </div>
}

@code {
    private bool showPeopleDropdown = false;
    private string currentPage = "home";
    private string? selectedPersonId = null;
    private GalleryComponent? galleryComponent;
    
    // 배경 이미지 슬라이더
    private List<string> heroImages = new();
    private int currentHeroImageIndex = 0;
    private System.Threading.Timer? imageTimer;

    protected override void OnInitialized()
    {
        LoadHeroImages();
        StartImageRotation();
    }

    private void LoadHeroImages()
    {
        heroImages = new List<string>
        {
            "/images/gallery/2026/singapore_1.jpg",
            "/images/gallery/2026/singapore_2.jpg",
            "/images/gallery/2025/resort_1.jpg"
        };
    }

    private string GetCurrentHeroImage()
    {
        if (heroImages.Any())
        {
            return heroImages[currentHeroImageIndex];
        }
        return "/images/gallery/2026/singapore_1.jpg";
    }

    private void StartImageRotation()
    {
        imageTimer = new System.Threading.Timer((_) =>
        {
            if (heroImages.Any())
            {
                currentHeroImageIndex = (currentHeroImageIndex + 1) % heroImages.Count;
                InvokeAsync(StateHasChanged);
            }
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private void TogglePeopleDropdown()
    {
        showPeopleDropdown = !showPeopleDropdown;
    }

    private void ShowPage(string page)
    {
        currentPage = page;
        showPeopleDropdown = false;
        StateHasChanged();
    }

    private void ShowPersonDetail(string personId)
    {
        selectedPersonId = personId;
        StateHasChanged();
    }

    private void ClosePersonDetail()
    {
        selectedPersonId = null;
        StateHasChanged();
    }

    public void Dispose()
    {
        imageTimer?.Dispose();
    }
}

<style>
