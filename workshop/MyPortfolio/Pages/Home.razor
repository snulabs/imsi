        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }

    .hero-title {
        font-size: 5.5rem;
        font-weight: 300;
        margin-bottom: 0.8rem;
        font-family: 'Cormorant Garamond', serif;
        letter-spacing: -1px;
        color: #2c3e50;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .hero-subtitle {
        font-size: 1.1rem;
        font-weight: 300;
        color: #555;
        margin-bottom: 0;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    /* 기존 스타일들 */
    .glance-section { 
        background-color: #f8f9fb; 
        padding: 6rem 0; 
        font-family: 'Montserrat', sans-serif;
    }
    .glance-container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
    .glance-title { font-size: 2.5rem; font-weight: 700; color: #2c3e50; margin-bottom: 1rem; text-align: center; }
    .glance-subtitle { font-size: 1.1rem; color: #7f8c8d; text-align: center; margin-bottom: 4rem; }

    .glance-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 5rem; }
    .glance-card { 
        background: #fff; border-radius: 20px; padding: 3rem 2rem; text-align: center;
