@using MyPortfolio.Models
@using MyPortfolio.Services
@inject SheetService SheetService

<div class="publications-page">
    <div class="publications-container">
        <header class="page-header">
            <div class="header-content">
                <h1>Publications</h1>
                <p class="subtitle">Research outputs and academic contributions</p>
            </div>
            @if (publications != null && publications.Any())
            {
                <div class="stats-badge">
                    <span class="stat-number">@publications.Count</span>
                    <span class="stat-label">Total Papers</span>
                </div>
            }
        </header>

        @if (publications == null)
        {
            <div class="loading-container">
                <div class="loading-spinner"></div>
                <p>Loading publications...</p>
            </div>
        }
        else if (!publications.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">ðŸ“„</div>
                <h2>No publications found</h2>
                <p>Check back later for updates</p>
            </div>
        }
        else
        {
            <div class="publications-timeline">
                @foreach (var group in groupedByYear)
                {
                    <div class="year-group">
                        <div class="year-header">
                            <div class="year-badge">
                                <span class="year-number">@group.Key</span>
                                <span class="year-count">@group.Count() papers</span>
                            </div>
                            <div class="year-line"></div>
                        </div>

                        <div class="papers-list">
                            @foreach (var pub in group.OrderByDescending(p => p.Pub_ID))
                            {
                                <article class="paper-card">
                                    <div class="paper-main">
                                        <h3 class="paper-title">@pub.Title</h3>
                                        
                                        <div class="paper-meta">
                                            <span class="venue-badge">
                                                <i class="oi oi-book"></i> @pub.Venue_Name
                                            </span>
                                        </div>

                                        <p class="paper-authors">
                                            <i class="oi oi-people"></i> @pub.Authors
                                        </p>

                                        @if (!string.IsNullOrEmpty(pub.Notes))
                                        {
                                            <details class="paper-abstract">
                                                <summary>
                                                    <i class="oi oi-document"></i> Abstract
                                                </summary>
                                                <div class="abstract-content">
                                                    <p>@pub.Notes</p>
                                                </div>
                                            </details>
                                        }
                                    </div>

                                    <div class="paper-actions">
                                        @if (!string.IsNullOrEmpty(pub.Paper_Link))
                                        {
                                            <a href="@pub.Paper_Link" target="_blank" class="action-btn primary">
                                                <i class="oi oi-document"></i> Paper
                                            </a>
                                        }
                                        @if (!string.IsNullOrEmpty(pub.Venue_Link))
                                        {
                                            <a href="@pub.Venue_Link" target="_blank" class="action-btn secondary">
                                                <i class="oi oi-link-intact"></i> Venue
                                            </a>
                                        }
                                    </div>
                                </article>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<WebPublication>? publications;
    private IOrderedEnumerable<IGrouping<string?, WebPublication>>? groupedByYear;

    protected override async Task OnInitializedAsync()
    {
        publications = await SheetService.GetWebPublicationsAsync();
        if (publications == null)
            return;

        groupedByYear = publications
            .GroupBy(p => string.IsNullOrWhiteSpace(p.Year) ? "Others" : p.Year)
            .OrderByDescending(g => g.Key);
    }
}

<style>
    .publications-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 3rem 1rem;
        font-family: 'Montserrat', -apple-system, sans-serif;
    }

    .publications-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        padding: 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }

    .header-content h1 {
        font-size: 3rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 0 0 0.5rem 0;
        font-family: 'Cormorant Garamond', serif;
    }

    .header-content .subtitle {
        font-size: 1.1rem;
        color: #7f8c8d;
        margin: 0;
    }

    .stats-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        color: white;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.85rem;
        opacity: 0.9;
        margin-top: 0.25rem;
    }

    /* Loading */
    .loading-container {
        text-align: center;
        padding: 5rem;
        color: #7f8c8d;
    }

    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #667eea;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 5rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .empty-state h2 {
        font-size: 1.8rem;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: #7f8c8d;
    }

    /* Timeline */
    .publications-timeline {
        position: relative;
    }

    .year-group {
        margin-bottom: 4rem;
    }

    .year-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .year-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem 1.5rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        min-width: 120px;
        border-left: 4px solid #667eea;
    }

    .year-number {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        line-height: 1;
    }

    .year-count {
        font-size: 0.85rem;
        color: #7f8c8d;
        margin-top: 0.25rem;
    }

    .year-line {
        flex: 1;
        height: 2px;
        background: linear-gradient(to right, #667eea, transparent);
    }

    /* Papers list */
    .papers-list {
        display: grid;
        gap: 1.5rem;
    }

    .paper-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.06);
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }

    .paper-card:hover {
        transform: translateX(8px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        border-left-color: #667eea;
    }

    .paper-main {
        margin-bottom: 1.5rem;
    }

    .paper-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #2c3e50;
        line-height: 1.4;
        margin: 0 0 1rem 0;
    }

    .paper-meta {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-bottom: 1rem;
    }

    .venue-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: #f0f3ff;
        color: #667eea;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .paper-authors {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        font-size: 0.95rem;
        color: #5a6c7d;
        line-height: 1.6;
        margin: 0 0 1rem 0;
    }

    .paper-authors i {
        margin-top: 0.2rem;
        flex-shrink: 0;
    }

    /* Abstract */
    .paper-abstract {
        margin-top: 1rem;
    }

    .paper-abstract summary {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: #f8f9fa;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
        color: #5a6c7d;
        transition: all 0.2s ease;
        list-style: none;
    }

    .paper-abstract summary::-webkit-details-marker {
        display: none;
    }

    .paper-abstract summary:hover {
        background: #e9ecef;
        color: #2c3e50;
    }

    .abstract-content {
        padding: 1rem 1rem 0.5rem 2rem;
        color: #5a6c7d;
        line-height: 1.7;
        font-size: 0.95rem;
    }

    .abstract-content p {
        margin: 0;
    }

    /* Actions */
    .paper-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 2px solid;
    }

    .action-btn.primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }

    .action-btn.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .action-btn.secondary {
        background: white;
        color: #667eea;
        border-color: #667eea;
    }

    .action-btn.secondary:hover {
        background: #f0f3ff;
        transform: translateY(-2px);
    }

    /* Responsive */
    @@media screen and (max-width: 768px) {
        .publications-page {
            padding: 1.5rem 0.5rem;
        }

        .page-header {
            flex-direction: column;
            gap: 1.5rem;
            padding: 1.5rem;
        }

        .header-content h1 {
            font-size: 2.2rem;
        }

        .stats-badge {
            width: 100%;
        }

        .year-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .year-badge {
            width: 100%;
        }

        .year-line {
            display: none;
        }

        .paper-card {
            padding: 1.5rem;
        }

        .paper-card:hover {
            transform: translateY(-4px);
        }

        .paper-title {
            font-size: 1.2rem;
        }

        .paper-actions {
            flex-direction: column;
        }

        .action-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>
